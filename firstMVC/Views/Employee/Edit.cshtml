@model firstMVC.Models.Employee
@{
    ViewData["Title"] = "Edit Employee";
}
<br/><br/>
<form asp-action="Edit" method="Post">
     <div class="form-horizontal">
            <div class="row"> 
                <div class="form-group">  
                            <label asp-for="Name" class="col-lg-2 col-sm-3 control-label"></label>             
                            <div class="col-lg-3">  
                                <input asp-for="Name" class="form-control" />    
                                <span asp-validation-for="Name" class="text-danger"></span>               
                            </div>  
                </div> 

                <div class="form-group">  
                            <label asp-for="Age" class="col-lg-2 col-sm-3 control-label"></label>             
                            <div class="col-lg-3">  
                                <input asp-for="Age" class="form-control" />      
                                            
                            </div>  
                </div>  
            </div>
     </div>
        <input type="submit" value="Update" class="col-lg-2 col-md-offset-2 btn btn-success" /> <br/>

</form>